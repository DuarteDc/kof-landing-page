---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <nav
      class="flex sticky top-0 z-50 bg-black bg-opacity-50 border-b-[1px] py-4 items-center px-4"
    >
      <div class="navbar_icons">
        <a href="/" target="_blank">
          <img
            src="https://www.snk-corp.co.jp/es-es/games/kof-portal/img/common/toplogo_f.svg"
            alt="THE KING OF FIGHTERS PORTAL"
            class="w-8 mr-1"
          />
        </a>
        <img
          src="https://www.snk-corp.co.jp/es-es/games/kof-portal/img/common/toplogo_logo.svg"
          alt="THE KING OF FIGHTERS PORTAL"
          class="w-40"
        />
      </div>
      <div class="flex items-center">
        <p class="bg-yellow-400 text-[9px] px-5 font-bold mx-4 pt-[1px]">
          UPDATE
        </p>
        <p class="text-white text-xs font-bold">
          2023.03.01 CHARACTER DATABASE OPEN!
        </p>
      </div>
    </nav>
    <section class="background animate-background"></section>
    <header class="container-header">
      <div>
        <picture>
          <img
            src="https://www.snk-corp.co.jp/es-es/games/kof-portal/img/main/top_kyo.webp"
            alt="KOF-img"
            class="w-[1200px] z-30 absolute left-2 top-11"
          />
        </picture>
        <picture>
          <img
            src="https://www.snk-corp.co.jp/es-es/games/kof-portal/img/main/top_iori.webp"
            alt="THE KING OF FIGHTERS PORTAL"
            class="w-[1200px] z-20 absolute right-2 -top-20"
          />
        </picture>
      </div>
      <div class="absolute flex flex-col justify-center items-center z-50">
        <picture>
          <img
            src="https://www.snk-corp.co.jp/es-es/games/kof-portal/img/main/top_sptop.svg"
            alt="KOF-img"
            class="w-[900px]"
          />
        </picture>
        <picture>
          <img
            src="https://www.snk-corp.co.jp/es-es/games/kof-portal/img/main/top_sptop2.svg"
            alt="THE KING OF FIGHTERS PORTAL"
            class="w-[850px]"
          />
        </picture>
        <div>
          <ul
            class="flex [&>li]:mx-4 [&>li]:font-extrabold text-lg text-white bg-black bg-opacity-80 py-3 border-b-2"
          >
            <li class="hover:text-yellow-400">ABOUT</li>
            <li class="hover:text-yellow-400">STORY</li>
            <li class="hover:text-yellow-400">SERIES</li>
            <li class="hover:text-yellow-400">CHARACTER DATABASE</li>
            <li class="hover:text-yellow-400">e-SPORTS</li>
          </ul>
        </div>
      </div>
    </header>
    <section class="min-h-screen">ds</section>
  </main>
</Layout>

<style>
  .navbar_icons {
    display: flex;
    align-items: center;
    margin: 0 8px;
  }
  .icon {
    width: 12px;
    margin: 0 2px;
  }
  .icon-word {
    width: 60px;
    margin: 0 2px;
  }
  .background {
    position: fixed;
    z-index: -10;
    background: url("https://www.snk-corp.co.jp/es-es/games/kof-portal/img/main/hiroakichara1_togo.webp")
        50% 30% no-repeat,
      url("https://www.snk-corp.co.jp/es-es/games/kof-portal/img/main/hiroakichara12_togo.webp")
        50% 60% no-repeat;
    background-size: contain;
    min-height: 100vh;
    width: 100%;
  }
  .background::after {
    content: "";
    position: absolute;
    background-color: rgba(0, 0, 0, 0.628);
    width: 100%;
    min-height: 100vh;
  }
  @keyframes background-scale {
    0% {
      transform: scale(1.8);
    }
    25% {
      transform: scale(2);
    }
    50% {
      transform: scale(2.3);
    }
    75% {
      transform: scale(2);
    }
    100% {
      transform: scale(1.8);
    }
  }
  .animate-background {
    animation-name: background-scale;
    animation-duration: 15s;
    animation-iteration-count: infinite;
  }
  .icon_container {
    position: absolute;
    display: flex;
    flex-direction: column;
    z-index: 50;
  }
  .icon_logo {
    width: 350px;
    height: auto;
    margin: 0 0;
    padding: 0 0;
  }
  .icon_text {
    width: 300px;
    height: 100px;
  }
  .container-header {
    position: absolute;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    width: 100%;
  }
</style>
