---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <nav class="navbar">
    <div class="navbar_icons">
      <a href="/" target="_blank">
        <img
          src="https://www.snk-corp.co.jp/es-es/games/kof-portal/img/common/toplogo_f.svg"
          alt="THE KING OF FIGHTERS PORTAL"
          class="icon"
        />
      </a>
      <img
        src="https://www.snk-corp.co.jp/es-es/games/kof-portal/img/common/toplogo_logo.svg"
        alt="THE KING OF FIGHTERS PORTAL"
        class="icon-word"
      />
    </div>
  </nav>
  <main class="root_app">
    <section class="background animate-background"></section>
    <header class="container-header">
      <div style="position: absolute; width: 100%; min-height: 100%;">
        <picture>
          <img 
            src="https://www.snk-corp.co.jp/es-es/games/kof-portal/img/main/top_kyo.webp"
            alt="KOF-img"
            style="width: 450px; z-index: 20; position: absolute; left: 40px; top:40px"
          />
        </picture>
        <picture>
          <img
            src="https://www.snk-corp.co.jp/es-es/games/kof-portal/img/main/top_iori.webp"
            alt="THE KING OF FIGHTERS PORTAL"
            style="width: 450px; z-index: 10; position: absolute; top: -40px; right: 20px;"
          />
        </picture>
      </div>
      <div class="icon_container">
        <picture>
          <img
            src="https://www.snk-corp.co.jp/es-es/games/kof-portal/img/main/top_sptop.svg"
            alt="KOF-img"
            class="icon_logo"
          />
        </picture>
        <picture>
          <img
            src="https://www.snk-corp.co.jp/es-es/games/kof-portal/img/main/top_sptop2.svg"
            alt="THE KING OF FIGHTERS PORTAL"
            class="icon_text"
          />
        </picture>
      </div>
    </header>
  </main>
</Layout>

<style>
  .root_app {
    overflow: hidden;
    position: relative;
  }
  .navbar {
    max-height: 40px;
    position: sticky;
    top: 0;
    z-index: 9999;
    background-color: rgba(0, 0, 0, 0.011);
    border-bottom: thin solid #ffffff;
    border-bottom-width: ;
  }
  .navbar_icons {
    display: flex;
    align-items: center;
    margin: 0 8px;
  }
  .icon {
    width: 12px;
    margin: 0 2px;
  }
  .icon-word {
    width: 60px;
    margin: 0 2px;
  }
  .background {
    position: fixed;
    z-index: -10;
    background: url("https://www.snk-corp.co.jp/es-es/games/kof-portal/img/main/hiroakichara1_togo.webp")
        50% 30% no-repeat,
      url("https://www.snk-corp.co.jp/es-es/games/kof-portal/img/main/hiroakichara12_togo.webp")
        50% 60% no-repeat;
    background-size: contain;
    min-height: 100vh;
    width: 100%;
  }
  .background::after {
    content: "";
    position: absolute;
    background-color: rgba(0, 0, 0, 0.47);
    width: 100%;
    min-height: 100vh;
  }
  @keyframes background-scale {
    0% {
      transform: scale(1.8);
    }
    25% {
      transform: scale(2);
    }
    50% {
      transform: scale(2.3);
    }
    75% {
      transform: scale(2);
    }
    100% {
      transform: scale(1.8);
    }
  }
  .animate-background {
    animation-name: background-scale;
    animation-duration: 15s;
    animation-iteration-count: infinite;
  }
  .icon_container {
	position: absolute;
    display: flex;
    flex-direction: column;
	z-index: 50;
  }
  .icon_logo {
    width: 350px;
    height: auto;
    margin: 0 0;
    padding: 0 0;
  }
  .icon_text {
    width: 300px;
    height: 100px;
  }
  .container-header {
    position: fixed;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    width: 100%;
  }
</style>
